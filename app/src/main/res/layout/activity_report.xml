<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="530dp"
    android:background="@drawable/button_round"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:src="@drawable/back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:background="@drawable/edittext_rounded_corner_rectangle_3">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/r_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/binggrae"
                android:text="원치 않는 상업성 콘텐츠 또는 스팸"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn2"
                android:text="포르노 또는 음란물"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn3"
                android:text="아동 학대"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn4"
                android:text="증오심 표현 또는 노골적인 폭력"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn5"
                android:text="테러 조장"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn6"
                android:text="희롱 또는 괴롭힘"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn7"
                android:text="자살 또는 자해"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />
            <RadioButton
                android:id="@+id/r_btn8"
                android:text="잘못된 정보"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/binggrae"
                android:textColor="#000000" />

        </RadioGroup>



    </LinearLayout>


    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_report_submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_round"
            android:fontFamily="@font/binggrae"
            android:text="신고하기"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>


</LinearLayout>