<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F0D7"
    android:orientation="vertical"
    tools:context="org.techtown.Single_Fridge.Fragments.Fragment_refrige">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0"
                android:background="@drawable/edittext_rounded_corner_rectangle_3"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="오늘의 추천 레시피"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="332dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_rounded_corner_rectangle_2"
                android:gravity="center"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/recipe_list"
                    android:layout_width="328dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_rounded_corner_rectangle_4"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="123dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle_3"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="재료별 레시피 검색하기"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/Button_search2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/search"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="332dp"
                android:layout_height="302dp"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="0"
                android:background="@drawable/edittext_rounded_corner_rectangle_2"
                android:gravity="center"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/gridview2"
                    android:layout_width="330dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle_4"
                    android:numColumns="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                </GridView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>